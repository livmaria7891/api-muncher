<h2><%= "Search Results for #{@query.capitalize}" %></h2>

<main class="row small-up-1 medium-up-3 search-results">
  <% @data.each do |recipe| %>
        <section class = "column">
          <%= link_to recipe.name, show_path(recipe.uri) %></br>
          <%= link_to image_tag(recipe.photo_url),show_path(recipe.uri) %></br>
        </section>
    <% end %>

  </main>
    <%= paginate @data %>
